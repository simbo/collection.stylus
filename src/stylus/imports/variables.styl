/**
 * Mediaquery breakpoints
 * =====================================================================
 */

breakpoints = {
    xs: {
        min: 0,
        max: 479px
    },
    xsl: {
        min: 480px,
        max: 767px
    },
    sm: {
        min: 768px,
        max: 991px
    },
    md: {
        min: 992px,
        max: 1199px
    },
    lg: {
        min: 1200px,
        max: 1599px
    },
    xl: {
        min: 1600px,
        max: 0
    }
}


/**
 * Grid config
 * =====================================================================
 */

grid-breakpoints = {}

for key, value in breakpoints
    grid-breakpoints[key] = value.min

grid-config = {
    placeholders-only: true,
    column-count: 12,
    gutter-width: 0,
    breakpoints: grid-breakpoints
}
